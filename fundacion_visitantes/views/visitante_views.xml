<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="fundacion_visitante_view_form" model="ir.ui.view">
        <field name="name">fundacion.visitante.view.form</field>
        <field name="model">fundacion.visitante</field>
        <field name="arch" type="xml">
            <form string="Visitante">
                <sheet>
                    <field name="image_1920" widget="image" class="oe_avatar" nolabel="1"/>
                    <group>
                        <field name="name"/>
                        <field name="identification_number"/>
                        <field name="phone"/>
                        <field name="email"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="fundacion_visitante_view_list" model="ir.ui.view">
        <field name="name">fundacion.visitante.view.list</field>
        <field name="model">fundacion.visitante</field>
        <field name="arch" type="xml">
            <list string="Visitantes">
                <field name="name"/>
                <field name="identification_number"/>
                <field name="phone"/>
            </list>
        </field>
    </record>

    <record id="fundacion_visitante_action" model="ir.actions.act_window">
        <field name="name">Visitantes (Historial)</field>
        <field name="res_model">fundacion.visitante</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>