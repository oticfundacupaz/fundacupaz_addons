<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="fundacion_visita_reporte_dia_wizard_view_form" model="ir.ui.view">
        <field name="name">fundacion.visita.reporte.dia.wizard.view.form</field>
        <field name="model">fundacion.visita.reporte.dia.wizard</field>
        <field name="arch" type="xml">
            <form string="Generar Reporte por Día">
                <group>
                    <field name="fecha_reporte"/>
                </group>
                <footer>
                    <button name="action_imprimir_reporte" string="Generar Reporte" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_lanzar_reporte_dia_wizard" model="ir.actions.act_window">
        <field name="name">Reporte por Día</field>
        <field name="res_model">fundacion.visita.reporte.dia.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>