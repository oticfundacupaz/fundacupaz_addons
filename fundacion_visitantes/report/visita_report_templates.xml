<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_visitas_por_dia_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h2 class="text-center">Reporte de Visitas del Día: <span t-esc="data['fecha_reporte'].strftime('%d/%m/%Y')"/></h2>
                    <div class="row">
                        <div class="col-12 text-center">
                            <strong>Generado por: </strong>
                            <span t-esc="data['nombre_usuario']"/>
                        </div>
                    </div>
                    <table class="table table-sm table-bordered mt-4">
                        <thead>
                            <tr>
                                <th>Visitante</th>
                                <th>Cédula / ID</th>
                                <th>ORIGEN</th>
                                <th>Motivo</th>
                                <th>Se dirige a</th>
                                <th>Hora Entrada</th>
                                <th>Hora Salida</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="docs" t-as="visita">
                                <td><span t-field="visita.name"/></td>
                                <td><span t-field="visita.identification_number"/></td>
                                <td><span t-field="visita.origen"/></td>
                                <td><span t-field="visita.visit_purpose"/></td>
                                <td><span t-field="visita.destination_person"/></td>
                                <td><span t-field="visita.entry_date" t-options='{"widget": "datetime", "format": "HH:mm"}'/></td>
                                <td><span t-field="visita.exit_date" t-options='{"widget": "datetime", "format": "HH:mm"}'/></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>

    <template id="report_visita_hoja_template">
    <t t-call="web.html_container">
        <t t-call="web.external_layout">
            <div class="page">
                <h2 class="text-center">Hoja de Registro de Visitas</h2>
                <div class="row mt-4 mb-4">
                    <div class="col-6">
                        <strong>Referencia: </strong><span t-field="docs.name"/>
                    </div>
                    <div class="col-6 text-right">
                        <strong>Fecha: </strong><span t-field="docs.date" t-options='{"widget": "date"}'/>
                    </div>
                </div>

                <table class="table table-bordered mt-4">
                    <thead>
                        <tr>
                            <th>Visitante</th>
                            <th>Cédula / ID</th>
                            <th>ORIGEN</th>
                            <th>Motivo</th>
                            <th>Se dirige a</th>
                            <th>Hora Entrada</th>
                            <th>Hora Salida</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="docs.visita_ids" t-as="visita">
                            <td><span t-field="visita.visitor_id.name"/></td>
                            <td><span t-field="visita.identification_number"/></td>
                            <td><span t-field="visita.origen"/></td>
                            <td><span t-field="visita.visit_purpose"/></td>
                            <td><span t-field="visita.destination_person"/></td>
                            <td><span t-field="visita.entry_date" t-options='{"widget": "datetime", "format": "HH:mm"}'/></td>
                            <td><span t-field="visita.exit_date" t-options='{"widget": "datetime", "format": "HH:mm"}'/></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </t>
    </t>
</template>
</odoo>