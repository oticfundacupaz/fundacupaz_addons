<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="fundacion_visita_report_wizard_view_form" model="ir.ui.view">
        <field name="name">fundacion.visita.report.wizard.view.form</field>
        <field name="model">fundacion.visita.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Generar Reporte de Visitas por Destino">
                <group>
                    <field name="date_filter"/>
                    <field name="destination_person"/>
                </group>
                <footer>
                    <button name="action_print_report" string="Imprimir Reporte" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_launch_report_por_destino_wizard" model="ir.actions.act_window">
        <field name="name">Reporte por Destino</field>
        <field name="res_model">fundacion.visita.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>