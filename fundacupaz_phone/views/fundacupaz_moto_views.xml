<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_form_fundacupaz_moto_marca" model="ir.ui.view">
            <field name="name">fundacupaz.moto.marca.form</field>
            <field name="model">fundacupaz.moto.marca</field>
            <field name="arch" type="xml">
                <form string="Marca de Moto">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                        <notebook>
                            <page string="Modelos">
                                <field name="modelo_ids">
                                    <list editable="bottom">
                                        <field name="name"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_tree_fundacupaz_moto_marca" model="ir.ui.view">
            <field name="name">fundacupaz.moto.marca.list</field>
            <field name="model">fundacupaz.moto.marca</field>
            <field name="arch" type="xml">
                <list string="Marcas de Moto">
                    <field name="name"/>
                    <field name="modelo_ids" string="NÃºmero de Modelos" widget="many2many_count"/>
                </list>
            </field>
        </record>

        <record id="action_fundacupaz_moto_marca" model="ir.actions.act_window">
            <field name="name">Marcas de Motos</field>
            <field name="res_model">fundacupaz.moto.marca</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="menu_fundacupaz_motos_root"
                  name="Motos"
                  parent="fundacupaz_phone.menu_fundacupaz_reportes_root"
                  sequence="20"
                  groups="fundacupaz_phone.grupo_fundacupaz_menu_telefonos"/>

        <menuitem id="menu_fundacupaz_motos_marcas"
                  name="Marcas de Motos"
                  parent="fundacupaz_phone.menu_Fundacupaz_Ajustes"
                  action="action_fundacupaz_moto_marca"
                  sequence="10"/>
    </data>
</odoo>