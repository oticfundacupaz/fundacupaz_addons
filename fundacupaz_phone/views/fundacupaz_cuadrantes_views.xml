<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_form_fundacupaz_cuadrante" model="ir.ui.view">
            <field name="name">fundacupaz.cuadrante.form</field>
            <field name="model">fundacupaz.cuadrante</field>
            <field name="arch" type="xml">
                <form string="Fundacupaz">
                    <sheet>
                        <group>
                            <group string="Nombre de cuadrante">
                                <field name="name" required="True"/>
                            </group>
                            <group string="Datos del Cuadrante">
                                <field name="estado"/>
                                <field name="municipio"/>
                                <field name="parroquia_comuna"/>
                                <field name="circuito_comunal"/>
                                <field name="jefe_cuadrante"/>
                                <field name="telefono"/>
                            </group>
                        </group>

                       <group string="Información del Vehículo/Moto">
                            <field name="tiene_moto" widget="radio"/>

                           <field name="marca_moto_id"
                                  string="Marca de la Moto"
                                  invisible="tiene_moto != 'si'"
                                  options="{'no_create': False}"/>

                            <field name="modelo_moto_id"
                                   string="Modelo de la Moto"
                                   invisible="tiene_moto != 'si'"
                                   domain="[('marca_id', '=', marca_moto_id)]"
                                   options="{'no_create': False}"/>

                            <field name="serial_vehiculo"/>
                        </group>

                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <record id="view_list_fundacupaz_cuadrante" model="ir.ui.view">
            <field name="name">fundacupaz.cuadrante.list</field>
            <field name="model">fundacupaz.cuadrante</field>
            <field name="arch" type="xml">
                <list string="Fundacupaz">
                    <field name="name"/>
                    <field name="estado"/>
                    <field name="municipio"/>
                    <field name="parroquia_comuna"/>
                    <field name="circuito_comunal"/>
                    <field name="jefe_cuadrante"/>
                    <field name="telefono"/>

                    <field name="tiene_moto"/>

                    <field name="marca_moto_id" string="Marca de la Moto" invisible="tiene_moto != 'si'" options="{'no_create': False}"/>

                    <field name="modelo_moto_id" string="Modelo de la Moto" invisible="tiene_moto != 'si'" options="{'no_create': False}"/>

                    <field name="serial_vehiculo"/>

                </list>
            </field>
        </record>

        <record id="action_fundacupaz_cuadrante" model="ir.actions.act_window">
            <field name="name">Cuadrantes</field>
            <field name="res_model">fundacupaz.cuadrante</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="view_list_fundacupaz_cuadrante"/>
        </record>

        <menuitem id="menu_fundacupaz_cuadrante"
                  name="Cuadrantes"
                  parent="fundacupaz_phone.menu_Fundacupaz_Ajustes"
                  action="action_fundacupaz_cuadrante"
                  sequence="10"/>

    </data>
</odoo>