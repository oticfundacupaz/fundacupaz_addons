<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_tree_fundacupaz_phone_plan" model="ir.ui.view">
        <field name="name">fundacupaz.phone.plan.tree</field>
        <field name="model">fundacupaz.phone.plan</field>
        <field name="arch" type="xml">
            <list string="Planes de Telefonía">
                <field name="name"/>
                <field name="operadora"/>
            </list>
        </field>
    </record>

    <record id="view_form_fundacupaz_phone_plan" model="ir.ui.view">
        <field name="name">fundacupaz.phone.plan.form</field>
        <field name="model">fundacupaz.phone.plan</field>
        <field name="arch" type="xml">
            <form string="Plan">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="operadora"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_fundacupaz_phone_plan" model="ir.actions.act_window">
        <field name="name">Planes de Telefonía</field>
        <field name="res_model">fundacupaz.phone.plan</field>
        <field name="view_mode">list,form</field>
    </record>

     <record id="menu_Fundacupaz_Ajustes" model="ir.ui.menu">
        <field name="name">Fundacupaz ajustes</field>
        <field name="sequence">20000</field>
        <field name="groups_id" eval="[(6, 0, [ref('fundacupaz_phone.group_fundacupaz_manager')])]"/>
    </record>

    <menuitem id="menu_fundacupaz_phone_plan" name="Planes" parent="fundacupaz_phone.menu_Fundacupaz_Ajustes" sequence="30" action="action_fundacupaz_phone_plan"/>
</odoo>