<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_form_report_verificacion_wizard" model="ir.ui.view">
            <field name="name">fundacupaz.phone.report.wizard.form</field>
            <field name="model">fundacupaz.phone.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Generar Reporte de Verificación">
                    <group>
                        <field name="turno_seleccion"/>
                        <field name="fecha_inicio"/>
                        <field name="fecha_fin"/>
                    </group>
                    <footer>
                        <button name="action_print_report" string="Imprimir" type="object" class="oe_highlight"/>
                        <button string="Cancelar" class="btn btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_launch_report_verificacion_wizard" model="ir.actions.act_window">
            <field name="name">Reporte de Verificación</field>
            <field name="res_model">fundacupaz.phone.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>