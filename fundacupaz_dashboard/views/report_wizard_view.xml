<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_fundacupaz_phone_report_wizard_form" model="ir.ui.view">
        <field name="name">fundacupaz.phone.report.wizard.form</field>
        <field name="model">fundacupaz.phone.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Exportar Reporte">
                <p>
                    Seleccione el formato en el que desea exportar el reporte de los tel√©fonos seleccionados.
                </p>
                <footer>
                    <button name="action_export_excel" string="Exportar a Excel" type="object" class="btn-primary"/>
                    <button name="action_export_pdf" string="Exportar a PDF" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_open_phone_report_wizard" model="ir.actions.act_window">
        <field name="name">Exportar Reporte</field>
        <field name="res_model">fundacupaz.phone.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="fundacupaz_phone.model_fundacupaz_phone"/>
        <field name="binding_view_types">list,form</field>
    </record>
</odoo>