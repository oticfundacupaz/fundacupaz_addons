<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_phone_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc"> <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Reporte de Teléfonos</h2>
                        <p>Fecha de Emisión: <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d-%m-%Y %H:%M')"/></p>

                        <table class="table table-sm table-bordered mt32">
                            <thead>
                                <tr>
                                    <th>Número</th>
                                    <th>Operadora</th>
                                    <th>Estatus</th>
                                    <th>Plan</th>
                                    <th>Ente Asignado</th>
                                    <th>Estado</th>
                                    <th>Municipio</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="docs" t-as="phone">
                                    <tr>
                                        <td><span t-esc="phone.number_phone"/></td>
                                        <td><span t-esc="phone.operadora"/></td>
                                        <td><span t-esc="phone.estatus"/></td>
                                        <td><span t-esc="phone.plan_id.name"/></td>
                                        <td><span t-esc="phone.ente.name"/></td>
                                        <td><span t-esc="phone.estado.name"/></td>
                                        <td><span t-esc="phone.municipio.name"/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>